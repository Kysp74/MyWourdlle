                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/button_U"
                android:layout_width="39dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/black"
                android:padding="3dp"
                android:text="U"
